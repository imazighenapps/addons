<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

         <record model="ir.module.category" id="module_employee_doc_request">
            <field name="name">Documents Request</field>
            <field name="description">Helps you Documents Request.</field>
            <field name="sequence">9</field>
        </record>

        <record id="group_doc_request_employee" model="res.groups">
            <field name="name">Empoyee</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_employee_doc_request"/>
        </record>
        <record id="group_doc_head_department" model="res.groups">
            <field name="name">Head of Department </field>
            <field name="implied_ids" eval="[(4, ref('employee_doc_request.group_doc_request_employee'))]"/>
            <field name="category_id" ref="module_employee_doc_request"/>
        </record>
        
        <record id="group_doc_manager" model="res.groups">
            <field name="name">Manager </field>
            <field name="implied_ids" eval="[(4, ref('employee_doc_request.group_doc_head_department'))]"/>
            <field name="category_id" ref="module_employee_doc_request"/>
        </record>
        
        
        <record id="doc_request_own_rule" model="ir.rule">
            <field name="name">Document Material Request Own</field>
            <field name="model_id" ref="model_doc_request"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_doc_request_employee'))]"/>
        </record>
        
    </data>
</odoo>
