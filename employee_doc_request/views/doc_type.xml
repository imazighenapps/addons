<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="doc_type_form_view" model="ir.ui.view">
            <field name="name">doc.type.form.view</field>
            <field name="model">doc.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="name"/><br/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="visibility_type"/>
                                <field name="department_id" attrs="{'invisible': [('visibility_type', '!=', 'specific_department')]}"/>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="doc_type_tree_view" model="ir.ui.view">
            <field name="name">doc.type.tree.view</field>
            <field name="model">doc.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="visibility_type"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

         <record model="ir.actions.act_window" id="doc_type_action">
            <field name="name">Document type</field>
            <field name="res_model">doc.type</field>
            <field name="view_mode">tree,form</field>
        </record>


        
       

    </data>
</odoo>
