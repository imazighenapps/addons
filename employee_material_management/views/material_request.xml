<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="material_request_form_view" model="ir.ui.view">
            <field name="name">material.request.form.view</field>
            <field name="model">material.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="employee_request_confirm" groups='employee_material_management.group_material_request_employee' type="object" string="Confirm" states="draft" class="btn-primary"/>
                        <button name="dep_request_confirm" groups='employee_material_management.group_material_department_manager' type="object" string="Department Approve" states="dept_confirm" class="btn-primary"/>
                        <button name="manager_request_confirm" groups='employee_material_management.group_material_manager' type="object" string="Manager Approve" states="manager_approve" class="btn-primary"/>
                        <button name="action_received" groups='employee_material_management.group_material_request_employee' type="object" string="Received" states="approved" class="btn-primary"/>
                        <button name="dep_request_rejected" groups='employee_material_management.group_material_department_manager' type="object" class="btn-secondary" string="Deppartment Reject" states="dept_confirm" />
                        <button name="manager_request_rejected" groups='employee_material_management.group_material_manager' type="object" class="btn-secondary" string="Manager Reject" states="manager_approve" />
                        <button name="create_po" groups='employee_material_management.group_material_manager' type="object" class="btn-secondary" string="Create purchase order" states="approved" />
                        <button name="create_picking" groups='employee_material_management.group_material_manager' type="object" class="btn-secondary" string="Create Internal transfer" states="approved" />
                        <field name="state" widget="statusbar" string="confirm" statusbar_visible="draft,dept_confirm,ir_approve,approved,stock,receive"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            
                        </div>

                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name"/><br/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                            </group>
                            <group>
                                <field name="request_date" readonly="1"/>
                                <field name="priority" widget="priority" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="receive_date"/>      
                            </group>
                        </group>
                        <notebook>
                            <page string="request Lines">
                               <field name="request_line_ids" attrs="{'readonly': [('state', 'in', ['cancel','receive'])]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="description"/>
                                        <field name="qty"/>
                                        <field name="uom"/>
                                    </tree>    
                                </field>
                            </page>
                            <page string="Approval">
                               <field name="request_approval_ids" readonly="1">
                                    <tree editable="bottom" decoration-danger="state=='rejected'" decoration-success="state=='approved'" >
                                        <field name="state"/>  
                                        <field name="employee_id"/>        
                                        <field name="department_id"/>  
                                        <field name="date"/>           
                                        <field name="reason"/>      
                                    </tree>    
                                </field>
                            </page>
                           
                        </notebook>    

                    
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="material_request_tree_view" model="ir.ui.view">
            <field name="name">material.request.tree.view</field>
            <field name="model">material.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="request_date"/>
                    <field name="priority"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

         <record model="ir.actions.act_window" id="material_request_action">
            <field name="name">Material Request</field>
            <field name="res_model">material.request</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
