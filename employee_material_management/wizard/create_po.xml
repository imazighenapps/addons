<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="create_po_form_view" model="ir.ui.view">
            <field name="name">create.po.form.view</field>
            <field name="model">create.po</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" />
                            </group>    
                        </group>    
                        <notebook>
                            <page name="lines" string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom" create="false" delete="false" edit="false">
                                        <field name="include" readonly="0" force_save="1"/>
                                        <field name="product_id" readonly="1" force_save="1"/>     
                                        <field name="description" readonly="1" force_save="1"/>     
                                        <field name="qty" readonly="1" force_save="1"/>          
                                        <field name="uom" readonly="1" force_save="1"/>
                                        <field name="request_line_id" readonly="1" invisible="1" force_save="1"/>
                                    </tree>
                                </field>
                                    
                            </page>
                        </notebook>
                    </sheet>
                     <footer>
                        <button name="do_create_po" type="object" string="Apply" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>   
                </form>
            </field>
        </record>
    </data>
</odoo>        