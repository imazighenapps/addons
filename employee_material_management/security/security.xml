<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="group_material_request_employee" model="res.groups">
            <field name="name">Material Request Empoyee</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_material_department_manager" model="res.groups">
            <field name="name">Material Request Department Manager </field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_material_manager" model="res.groups">
            <field name="name">Material Request Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        
        <record id="material_request_own_rule" model="ir.rule">
            <field name="name">Employee Material Request Own</field>
            <field name="model_id" ref="model_material_request"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('employee_material_management.group_material_request_employee'))]"/>
        </record>
        <record id="material_request_line_employee_rule" model="ir.rule">
            <field name="name">Employee Material request Lines</field>
            <field name="model_id" ref="model_material_request_line"/>
            <field name="domain_force">[('request_id.employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
