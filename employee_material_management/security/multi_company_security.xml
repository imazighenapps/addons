<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
        <record model="ir.rule" id="material_request_comp_rule">
            <field name="name">Material Request multi-company</field>
            <field name="model_id" ref="model_material_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="material_request_line_comp_rule">
            <field name="name">Material Request Line multi-company</field>
            <field name="model_id" ref="model_material_request_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('request_id.company_id','=',False),('request_id.company_id','in',company_ids)]</field>
        </record>

    </data>
</odoo>
