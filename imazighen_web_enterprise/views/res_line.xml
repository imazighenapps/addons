
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="res_line_tree_view">
      <field name="name">res.line.tree.view</field>
      <field name="model">res.line</field>
      <field name="arch" type="xml">
        <tree string="Lignes">
            <field name="name"/>      
            <field name="code"/> 
            <field name="amount_distance"/>     
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_line_form_view">
      <field name="name">res.line.from.view</field>
      <field name="model">res.line</field>
      <field name="arch" type="xml">
        <form string="Ligne">
         <sheet>
           <div name="button_box" class="oe_button_box"> 
              <button type="obect" class="oe_stat_button" name="" icon='fa-route' style="pointer-events:none;">                 
                <div class="o_stat_info">
                    <field name="amount_distance" string='KM' class="o_stat_value" widget="statinfo"/>   
                  </div>
              </button>
            </div>
            <div class="row">
              <div class="col-8">
                <h1>
                  <field name="name" default_focus="1" placeholder="Nom"/>
                </h1>  
              </div>
              <div class="col-4"> 
                <h1>   
                  <field name="code" default_focus="1" placeholder="Code"/>
                  <field name="onchange_station_line" invisible="1"/>
                </h1>
              </div>            
            </div>
            <notebook>
                <page string="listes des relations">
                  <field name="relation_line_ids">
                    <tree editable="botttom">  
                        <field name="sequence" widget="handle"/>      
                        <field name="relation_id"/>
                        <field name="name"/>
                        <field name="distance"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="relation_id" />
                            <field name="name"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
                <page string="listes des branches">
                  <field name="branch_line_ids">
                    <tree editable="botttom">  
                        <field name="sequence" widget="handle"/>      
                        <field name="branch_id"/>
                        <field name="name"/>
                        <field name="distance"/>
                    
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="branch_id" />
                            <field name="name"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                        
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
                <page string="Liste des gares additionnelles">                     
                  <field name="additional_station_ids">
                    <tree editable="botttom">
                        <field name="station_id"/>
                        <field name="name"/>
                        <field name="distance"/>
                        <field name="distance"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="station_id" />
                            <field name="name"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                         
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
                <page string="listes des gares de la ligne">
                  <field name="station_line_ids">
                    <tree editable="botttom">        
                        <field name="station_id"/>
                        <field name="name"/>
                        <field name="sequence" readonly="1" />
                        <field name="distance"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                           
                            <field name="station_id" />
                             <field name="name"/>
                            <field name="sequence"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="res_line_search" model="ir.ui.view">
      <field name="name">res.line.search</field>
      <field name="model">res.line</field>
      <field name="arch" type="xml">
          <search string="line search">
              <separator/>
              <field name="name"/>
              <field name="code"/>
          </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="res_line_action_window">
      <field name="name">Lignes</field>
      <field name="res_model">res.line</field>
      <field name="view_mode">tree,form</field>
      <field name="context"></field>
      <field name="domain"></field>
    </record>


  </data>
</odoo>

