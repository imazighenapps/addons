<odoo>
  <data>

    <record model="ir.ui.view" id="res_relation_tree_view">
      <field name="name">res.relation.tree.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <tree string="Relations">
            <field name="name"/>
            <field name="code"/>
            <field name="amount_distance"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_relation_form_view">
      <field name="name">res.relation.form.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <form string="Relation">
          <sheet>
          <div name="button_box" class="oe_button_box"> 
              <button type="obect" class="oe_stat_button" name="" icon='fa-route' style="pointer-events:none;">                 
                <div class="o_stat_info">
                    <field name="amount_distance" string='KM' class="o_stat_value" widget="statinfo"/>   
                  </div>
              </button>
           </div>
           <div class="row">
              <div class="col-8">
                <h1>
                  <field name="name" default_focus="1" placeholder="Nom"/>
                </h1>  
              </div>
              <div class="col-4"> 
                <h1>   
                  <field name="code" default_focus="1" placeholder="Code"/>
              
                </h1>
              </div>            
            </div>
            <notebook>
                <page string="Liste des branches">
                  <field name="branch_line_ids">
                    <tree editable="botttom">
                        <field name="sequence" widget="handle"/>
                        <field name="branch_id"/>
                        <field name="name"/>
                        <field name="distance"/>
                     
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="branch_id" />
                             <field name="name"/>      
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
                <page string="Liste des gares additionnelles">                     
                  <field name="additional_station_ids">
                    <tree editable="botttom">
                        <field name="station_id"/>
                        <field name="name"/>
                        <field name="distance"/>
                    </tree>
                    <form>
                      <group>
                        <group>
                            <field name="station_id" />
                            <field name="name"/>
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
          <div class="oe_chatter" modifiers="{}">
              <field name="message_follower_ids" widget="mail_followers" />
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
       
    <record id="res_relation_search" model="ir.ui.view">
        <field name="name">res.relation.search</field>
        <field name="model">res.relation</field>
        <field name="arch" type="xml">
            <search string="Relation search">
                <separator/>
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="res_relation_action_window">
        <field name="name">Relations</field>
        <field name="res_model">res.relation</field>
        <field name="view_mode">tree,form</field>
      
    </record>

  </data>
</odoo>

