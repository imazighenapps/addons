
<odoo>
  <data>

    <record model="ir.ui.view" id="res_region_tree_view">
      <field name="name">res.region.tree.view</field>
      <field name="model">res.region</field>
      <field name="arch" type="xml">
        <tree string="Région" editable="top">
            <field name="name"/>
            <field name="rail_network_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="res_region_action_window">
      <field name="name">Région</field>
      <field name="res_model">res.region</field>
      <field name="view_mode">tree</field>
    </record>


  </data>
</odoo>

