<!-- holiday_view.xml -->
<odoo>
    <data>

        <!-- Holiday Tree View -->
        <record model="ir.ui.view" id="view_holiday_tree">
            <field name="name">holiday.tree</field>
            <field name="model">appointment.holiday</field>
            <field name="arch" type="xml">
                <tree string="Holidays">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="calendar_id"/>
                </tree>
            </field>
        </record>

        <!-- Holiday Form View -->
        <record model="ir.ui.view" id="view_holiday_form">
            <field name="name">holiday.form</field>
            <field name="model">appointment.holiday</field>
            <field name="arch" type="xml">
                <form string="Holiday">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="calendar_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Holiday Action -->
        <record model="ir.actions.act_window" id="action_holiday">
            <field name="name">Holidays</field>
            <field name="res_model">appointment.holiday</field>
            <field name="view_mode">tree,form</field>
        </record>

        
    </data>
</odoo>